<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
		http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 암호화처리 bean등록 -->
	<bean 
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" 
		id="bcryptPasswordEncoder"/>
	<bean 
		id = "customSuccessHandler" 
		class = "com.spring.otlb.emp.controller.CustomSuccessHandler"/>
	<bean 
		id = "customUserDetailsService" 
		class = "com.spring.otlb.security.model.CustomUserDetailsService"/>

	<security:http>
		<security:intercept-url pattern="/" access="permitAll"/>
		<!-- <security:intercept-url pattern="/**" access="hasRole('ROLE_USER')"/> -->
		
		<security:form-login login-page="/emp/empLogin.do" 
			authentication-success-handler-ref="customSuccessHandler"/>
		
		<security:logout logout-url="/" 
			invalidate-session="true"/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="customUserDetailsService">
			<security:password-encoder ref="bcryptPasswordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
